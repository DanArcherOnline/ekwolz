<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Set the status bar and the navigation bar to be transparent-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="calculatorText">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#999</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">36</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
